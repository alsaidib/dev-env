{
  "name": "lambda-api-dev-env",
  "version": "0.1.0",
  "description": "An modern development environment for Serverless development with Lambda API",
  "main": "build/server.js",
  "module": "src/server.js",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development npx rollup -c -w",
    "start": "node build/server.js",
    "build": "npx rollup -c",
    "test": "npx ava",
    "lint": "npx eslint ./src",
    "netlify-lambda:server": "netlify-lambda -c webpack.functions.js serve functions",
    "netlify-lamba:prepare": "NODE_ENV=production netlify-lambda -c webpack.functions.js build functions"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint ./src --fix",
      "git add"
    ],
    "src/**/*.{json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dalisoft/lambda-api-dev-env.git"
  },
  "keywords": [
    "lambda",
    "api",
    "serverless",
    "modern",
    "dev-env"
  ],
  "author": "dalisoft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dalisoft/lambda-api-dev-env/issues"
  },
  "homepage": "https://github.com/dalisoft/lambda-api-dev-env#readme",
  "dependencies": {
    "aws-sdk": "^2.452.0",
    "consolemd": "^0.2.1",
    "lambda-api": "^0.10.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "ava": "^1.4.1",
    "eslint": "^5.16.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "netlify-lambda": "^1.4.7",
    "prettier": "^1.17.0",
    "rollup": "^1.11.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-run": "^1.1.0",
    "rollup-plugin-terser": "^4.0.4"
  }
}
